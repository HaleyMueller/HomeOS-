    <script type="text/javascript">
        var idleTime = 0;
        $(document).ready(function () {
            //Increment the idle time counter every minute.
            var idleInterval = setInterval(timerIncrement, 60000); // 1 minute

            //Zero the idle timer on mouse movement.
            $(this).mousemove(function (e) {
                idleTime = 0;
            });
            $(this).keypress(function (e) {
                idleTime = 0;
            });

            $.ajax({
                url: '/Client/GetInfo',
                type: 'get',
                success: function (data) {
                    console.log(data);
                    idleMaxTime = data.timeOutInMins;
                    $('#spanDeviceName').text(data.deviceName);
                }
            });

            $.ajax({
                url: '/Shared/CheckForCookie',
                type: 'get',
                success: function (data) {
                    console.log(data);
                    if (data.hasScreenInterfaceDevice == false) {
                        if (window.location.href.includes('/Device/AddScreenInterface') == false) {
                            window.location.href = '/Device/AddScreenInterface';
                        }
                    }
                }
            });
        });

        var idleMaxTime = 10;

        function timerIncrement() {
            idleTime = idleTime + 1;
            if (idleTime > idleMaxTime && idleMaxTime != 0) { // 20 minutes
                window.location.href = "/Home/Away";
            }
        }
